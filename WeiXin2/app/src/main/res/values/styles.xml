<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorTextViewNormal</item>
    </style>

    <style name="chatIcon">
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_width">31dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="homeIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="homeText">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="homeText_little">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="homeText_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="meText">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="meIcon">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="txlIcon">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">33dp</item>
    </style>

    <declare-styleable name="Ball">
        <attr name="ball_text" format="string"/>
        <attr name="start_color" format="string"/>
        <attr name="end_color" format="string"/>
        <attr name="anim_duration" format="integer"/>
    </declare-styleable>

</resources>
